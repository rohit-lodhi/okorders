<p id="notice"><%= notice %></p>
<%= button_to 'Follow User', class: 'follow_user' %>
<%= button_to 'Follow Topic', class: 'follow_topic' %>

<p>Question Posted By <%= @question.user.email%></p>
<p>
  <strong>Question:</strong>
  <%= @question.title %>
</p>

<table>
  <thead>
    <tr>
      <th><h3>Answer</h3></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
      	<td><strong>Answered By :</strong> <%= answer.user.email %></td>
      </tr>
      <tr>
        <td><strong>Answer : </strong><small class="answer"><%= answer.answer %></small></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= form_for(:answer, :url =>  "/answers") do |form| %>
	<%= form.hidden_field :question_id, value: @question.id%>
  <div class="field">
    <%= form.label :answer %>
    <%= form.text_area :answer %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', questions_path %>
